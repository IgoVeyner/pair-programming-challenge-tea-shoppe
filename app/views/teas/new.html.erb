<%= form_for @tea do |f| %>

  <div>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :category, "Category:" %>
    <%= f.text_field :category %>
  </div>

  <div>
    <%= f.label :description, "Description:" %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit %>
<% end %>